<!DOCTYPE html>
<html>
  <%- include('./partials/head')%>
  <title><%= platos.title %></title>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include('./partials/navBar') %>

    <!-- Header -->
    <%- include('./partials/header') %> 

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%= platos.title %></h1>
          <br />
          <h4><%= platos.details %></h4>
          <p class="ps-text-grey">
            <%= platos.price %>
          </p>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/<%= platos.img %>"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include('./partials/footer') %> 
    </div>
  </body>
</html>
